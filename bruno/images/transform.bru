meta {
  name: transform
  type: http
  seq: 2
}

post {
  url: {{url_v1}}/images/transform
  body: json
  auth: bearer
}

auth:bearer {
  token: {{accessToken}}
}

body:json {
  {
    "image_id": "{{imageUUID}}",
    "transformations": {
      "resize": {
        "width": "150",
        "height": "150"
      }
    }
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
